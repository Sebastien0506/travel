{% extends "base.html.twig" %}

{% block h1 %}Toute nos destination{% endblock %}

{% block body %}

<div class="destiantion">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Nom de la destination</th>
      <th scope="col">Avion utilis√©</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {% for destination in destinations %}  
    <tr>
      <td>{{ destination.nomDeLaDestination }}</td>
      <td>
        {% for avion in destination.avions %}
          {{ avion.nom }}
          {% if not loop.last %}, {% endif %}  
        {% endfor %}
      </td>
      <td>
        <a href="{{ path('modifiez_destionation', {'id': destination.id}) }}">Modifier</a> / <a href="#">Supprimer</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

</div>
{% endblock %}