{% extends "base.html.twig" %}

{% block h1 %}Tous nos avions{% endblock %}

{% block body %}



<table class="table">
  <thead>
    <tr>
      <th scope="col">Type de l'avion</th>
      <th scope="col">Nombre de places</th>
    </tr>
  </thead>
  <tbody>
    {% for avion in avions %} <!-- Remarquez le changement de 'avion' en 'avions' pour éviter la confusion et les erreurs -->
    <tr>
      <td>{{ avion.nom }}</td> <!-- Type de l'avion dans la première colonne -->
      <td>{{ avion.places }}</td> <!-- Nombre de places dans la seconde colonne -->
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}