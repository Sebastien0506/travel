{% extends "base.html.twig" %}

{% block h1 %}Tous nos avions{% endblock %}

{% block body %}



<table class="table">
  <thead>
    <tr>
      <th scope="col">Type de l'avion</th>
      <th scope="col">Nombre de places</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {% for avion in avions %} 
    <tr>
      <td>{{ avion.nom }}</td>
      <td>{{ avion.places }}</td>
      <td><a href="{{ path('modifier_avion', {'id':avion.id}) }}">Modifier</a>/<a href="">Supprimer</a></td>
      
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}